<div class="row py-5">
  <div class="col-lg-4 mx-auto">
    <h1 class = "text-center">Sign Up</h1>
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <!-- Googleログインボタンの表示 ここから追加 -->
    <div id="g_id_onload"
      data-client_id="658575122134-6bmn5kdvamrk071chmcmteva3nivnjmn.apps.googleusercontent.com"
      data-login_uri="https://tactica-chat.com/google_login_api/callback"
      data-auto_prompt="false">
    </div>
    <div class="g_id_signin"
      data-type="standard"
      data-size="large"
      data-theme="outline"
      data-text="sign_in_with"
      data-shape="rectangular"
      data-logo_alignment="left">
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-5">
        <%= f.label :username %><br />
        <%= f.text_field :username, autocomplete: "username", placeholder: "User Name", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.label :email%><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control py-2" %>
      </div>

      <div class="actions mt-4 mb-5">
        <%= f.submit "Sign Up", class: "form-control py-2 btn btn-primary fw-bold shadow"%>
      </div>
    <% end %>
  </div>
</div>