<div class="mb-3" style="margin: 50px;">
  <% if @video.video.attached? %>
    <video style="width: 60%;" src="<%= rails_blob_path(@video.video) %>" type="video/mp4" controls></video>
    <h3 style="margin-top: 15px;"><%= @video.title %></h3>
    <%= @video.introduction %><br>
    <%= link_to 'Write Note for this video', new_note_path, class: "btn btn-success", style: "margin-top: 6px;" %>
    <%= button_to 'Delete this video', video_path(@video), method: :delete, class: "btn btn-danger", style: "margin-top: 6px;" %>
  <% end %>
</div>